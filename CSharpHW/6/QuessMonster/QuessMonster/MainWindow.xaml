<Window x:Class="QuessMonster.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="350">
    <Grid>
        <TextBox x:Name="NumberText" HorizontalAlignment="Left" Height="40" Margin="40,40,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="40"/>
        <Label x:Name="TextLabel" Content="Enter number from 1 to 10" HorizontalAlignment="Left" Height="100" Margin="100,40,0,0" VerticalAlignment="Top" Width="230" FontSize="18"/>
        <Button x:Name="GoBtn" Content="Guess" HorizontalAlignment="Left" Margin="40,100,0,0" VerticalAlignment="Top" Width="40" Height="40" Click="GoBtn_Click"/>
    </Grid>
</Window>
